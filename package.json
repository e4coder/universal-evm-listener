{
  "name": "universal-blockchain-listener",
  "version": "1.0.0",
  "description": "Multi-chain blockchain event listener with Redis caching for ERC20 and native transfers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "api": "node dist/api/server.js",
    "api:dev": "ts-node src/api/server.ts",
    "clean": "rm -rf dist",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 list"
  },
  "keywords": [
    "blockchain",
    "alchemy",
    "redis",
    "erc20",
    "event-listener"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "alchemy-sdk": "^3.4.6",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
